{
  "includeCoAuthoredBy": false,
  "statusLine": {
    "type": "command",
    "command": "npx -y ccstatusline@latest",
    "padding": 0
  },
  "permissions": {
    "allow": [
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git branch:*)",
      "Bash(git checkout:*)",
      "Bash(git fetch:*)",
      "Bash(git pull:*)",
      "Bash(git add:*)",
      "Bash(git stash:*)",
      "Bash(git show:*)",
      "Bash(git blame:*)",
      "Bash(gh:*)",
      "Bash(npm list:*)",
      "Bash(npm ls:*)",
      "Bash(npm outdated:*)",
      "Bash(npm view:*)",
      "Bash(npm install:*)",
      "Bash(yarn list:*)",
      "Bash(yarn info:*)",
      "Bash(yarn install:*)",
      "Bash(pnpm list:*)",
      "Bash(pnpm install:*)",
      "Bash(uv:*)",
      "Bash(cd:*)",
      "Bash(ls:*)",
      "Bash(pwd:*)",
      "Bash(echo:*)",
      "Bash(which:*)",
      "Bash(mkdir:*)",
      "Bash(cp:*)",
      "Bash(cat:*)",
      "Bash(chmod:*)",
      "mcp__memory__:*",
      "mcp__context7__:*"
    ],
    "ask": [
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(npm publish:*)",
      "Bash(npm uninstall:*)",
      "Bash(npm unlink:*)",
      "Bash(mv:*)",
      "Bash(rm:*)",
      "Bash(node:*)",
      "Bash(python:*)"
    ]
  },
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/core/mid-conversation.js",
            "description": "Natural language memory triggers"
          }
        ]
      }
    ]
  }
}
