{
  "name": "@resonance/backend",
  "version": "0.0.1",
  "description": "Resonance backend API server",
  "type": "module",
  "main": "./dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "vitest",
    "test:ui": "vitest --ui"
  },
  "dependencies": {
    "@resonance/shared": "workspace:*",
    "@trpc/server": "^10.45.0",
    "@trpc/express": "^10.45.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "drizzle-orm": "^0.29.1",
    "better-sqlite3": "^9.2.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.6",
    "typescript": "^5.3.3",
    "tsx": "^4.7.0",
    "vitest": "^1.1.0",
    "@vitest/ui": "^1.1.0"
  }
}
