{
  "name": "@resonance/server",
  "version": "0.0.1",
  "description": "Resonance server runtime (Express) + infrastructure adapters",
  "private": true,
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "bun": "./src/index.ts",
      "import": "./src/index.ts",
      "types": "./src/index.ts"
    }
  },
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "start": "bun src/index.ts",
    "type-check": "tsc --noEmit",
    "build": "tsc --noEmit",
    "test": "bun test --pass-with-no-tests",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@resonance/api": "*",
    "@resonance/core": "*",
    "@resonance/shared": "*",
    "@trpc/server": "^11.7.2",
    "cors": "^2.8.5",
    "drizzle-orm": "^0.45.1",
    "express": "^5.2.1",
    "pg": "^8.13.1",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@types/bun": "^1.2.16",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/pg": "^8.11.10",
    "drizzle-kit": "^0.31.8",
    "typescript": "^5.9.3"
  }
}
