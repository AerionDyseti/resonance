{
  "name": "resonance",
  "version": "0.1.0",
  "description": "AIRP Memory Server - MCP tools for AI-assisted solo roleplaying",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/mcp-server"
  ],
  "scripts": {
    "dev": "bun run --filter @resonance/mcp-server dev",
    "build": "bun run --filter @resonance/mcp-server build",
    "start": "bun run --filter @resonance/mcp-server start",
    "test": "bun run --filter '*' test",
    "check": "bun run lint && bun run type-check && bun run format:check",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "bun run --filter '*' type-check",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/bun": "^1.2.16",
    "eslint": "^9.39.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.49.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css,scss}": [
      "prettier --write"
    ]
  }
}
