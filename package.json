{
  "name": "resonance",
  "version": "0.0.1",
  "description": "A flexible, AI-powered world building and tracking system",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/shared",
    "packages/core",
    "packages/api",
    "packages/server",
    "packages/frontend"
  ],
  "scripts": {
    "dev": "bun run --filter '*' dev",
    "dev:server": "bun run --filter @resonance/server dev",
    "dev:frontend": "bun run --filter @resonance/frontend dev",
    "build": "bun run --filter @resonance/shared build && bun run --filter @resonance/core build && bun run --filter @resonance/api build && bun run --filter @resonance/server build && bun run --filter @resonance/frontend build",
    "test": "bun run --filter '*' test",
    "check": "bun run test && bun run lint && bun run type-check && bun run format:check",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "bun run --filter '*' type-check",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/bun": "^1.2.16",
    "eslint": "^9.39.1",
    "eslint-plugin-vue": "^10.6.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.49.0",
    "vue-eslint-parser": "^10.2.0"
  },
  "lint-staged": {
    "*.{ts,tsx,vue}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css,scss}": [
      "prettier --write"
    ]
  }
}
